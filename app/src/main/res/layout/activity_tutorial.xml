<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".Tutorial">
  <ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
      android:id="@+id/scrollView2"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      android:orientation="vertical"
      android:gravity="start"
      app:layout_constraintBottom_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      android:padding="20dp">

      <Button
        android:id="@+id/button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Continue"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:onClick="launchPinCodeActivity"
        android:layout_margin="10dp"
        />

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tutorial_home" />

      <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The picture above represents the home page, it contains both add and delete face button. It also contain a list of all registered faces." />

      <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tutorial_pattern_lock" />

      <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The picture above represents the pattern input screen. Here you input pattern to be used for locking the phone." />
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tutorial_pincode" />

      <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:text="The picture above represents password input screen. Here you input your password to be used for locking the phone." />
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tutorial_registration" />

      <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The picture above represents face registration screen where the faces registration process will take place." />
      <ImageView
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:src="@drawable/tutorial_lockscreen" />

      <TextView
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="The picture above represents the lock screen. This is shown when the phone has been locked. You can either use you face, pattern or password to unlock you phone." />

    </LinearLayout>
  </ScrollView>

</android.support.constraint.ConstraintLayout>
